{
    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm run test",
            "name": "Run npm test",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "firefox",
            "request": "launch",
            "name": "Launch firefox against localhost",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src",
            "sourceMapPathOverrides": {
                "webpack:///./*": "${webRoot}/*"
            }
        }
    ]
}