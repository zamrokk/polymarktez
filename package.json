{
  "name": "polymarktez",
  "authors": "Benjamin Fuentes<benjamin.fuentes@nomadic-labs.com>",
  "private": true,
  "version": "0.0.0",
  "main": "index.ts",
  "dependencies": {
    "@jstz-dev/jstz": "^0.0.0",
    "ts-pattern": "^5.5.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "esbuild": "^0.20.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "scripts": {
    "build": "esbuild index.ts --bundle --format=esm --target=esnext --minify --outfile=dist/index.js",
    "build_proxy_version": "esbuild ./proxy_version/index.ts --bundle --format=esm --target=esnext --minify --outfile=dist/proxy_version/index.js && esbuild ./proxy_version/odds.ts --bundle --format=esm --target=esnext --minify --outfile=dist/proxy_version/odds.js ",
    "build_chunkstorage_version": "esbuild ./chunkstorage_version/index.ts --platform=node --bundle --format=esm --target=esnext --minify --outfile=dist/chunkstorage_version/index.js  ",
    "test": "jest --runTestsByPath index.test.ts",
    "test_proxy_version": "jest --runTestsByPath ./proxy_version/index.test.ts",
    "test_chunkstorage_version": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest  --runTestsByPath ./chunkstorage_version/index.test.ts"
  }
}
